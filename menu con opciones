#include <stdio.h>
#include <ctype.h>
#include <string.h>

int main() {
    int opcion;
    char nombre[100];
    int i;
    int longitud;

    do {
        printf("1. ingresar su nombre \n");
        printf("2. escribir en mayusculas \n");
        printf("3. contar caracteres \n");
        printf("4. cuantas veces aparece la A \n");
        printf("5. salir \n\n ");
            scanf("%d", &opcion);

        switch (opcion) {
            case 1: {
                printf("ingrese su nombre: \n\n");
                scanf("%s", nombre);
                printf("su nombre es %s\n\n", nombre);
                break;
            }
            case 2: {
                i = 0; // reinicio contador
                while (nombre[i] != '\0') {
                    nombre[i] = toupper(nombre[i]);
                    i++;
                }
                printf("en mayusculas: %s\n\n", nombre);
                    break;
            }
            case 3: {
                longitud = strlen(nombre); // obtiene longitud
                    printf("la longitud de su cadena es de %d \n \n", longitud);
                        break;
            }
            case 4:{
                int contadorA = 0, contadorE = 0;
                i = 0; // reinicio contador
                    while (nombre[i] != '\0') {
                        if (nombre[i] == 'a' || nombre[i] == 'A')
                            contadorA++;
                                i++;
                }
                 printf("La letra 'a' aparece %d veces.\n", contadorA);
                    break;
            }
            case 5:{
                printf("saliendo del sistema...");
                    break;
            }
        }
    } while (opcion != 4);

    return 0;
}
