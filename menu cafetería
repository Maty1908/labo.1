case 'G':
case 'g':
        printf("Ingrese la cantidad de cafes grandes que quiere\n");
        scanf("%d",&cantidad);
        printf("Ingrese el precio del cafe\n");
        scanf("%f", &monto);
        TotalTazasxdia += cantidad;
        TotalMontoxdia += cantidad * monto;
        break;

case 'M':
case 'm':
        printf("Ingrese la cantidad de cafes medianos que quiere\n");
        scanf("%d",&cantidad);
        printf("Ingrese el precio del cafe\n");
        scanf("%f", &monto);
        TotalTazasxdia += cantidad;
        TotalMontoxdia += cantidad * monto;
        break;

case 'C':
case 'c':
        printf("Ingrese la cantidad de cafes chicos que quiere\n");
        scanf("%d",&cantidad);
        printf("Ingrese el precio del cafe\n");
        scanf("%f", &monto);
        TotalTazasxdia += cantidad;
        TotalMontoxdia += cantidad * monto;
        break;

default:
    printf("Opcion invalida, seleccione otro caracter\n");

 }


    }while (opcion != 'X');

         printf("Dia finalizado...\n"); i+1;
         printf("Cantidad de tazas vendidas %d\n", TotalTazasxdia);
         printf("Total de dinero recaudado: %2.f\n", TotalMontoxdia);


     TotalTazasemanal += TotalTazasxdia;
     TotalPlataTotal  += TotalMontoxdia;

if


}
     printf("=====RESUMEN SEMANAL======\n\n");
     printf("Total de cafes vendidos %d\n\n", TotalTazasemanal);
     printf ("Total de dinero recaudado %2.f\n\n",TotalPlataTotal);
 

return 0;
