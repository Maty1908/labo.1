#include <stdio.h>
#include <stdlib.h>

int main() {

    int TotalTazasemanal = 0;
    float TotalPlataTotal = 0;
    float monto = 0;
    int cantidad;

    for (int i = 0; i < 7; i++) {
        int dia = i+1;
        int TotalTazasxdia= 0;
        float TotalMontoxdia= 0;
        char opcion;

        printf("--------MENU-------- DIA %d\n",dia);

do  {

        printf("---- COMPRAR CAFE GRANDE (G) $1500----\n");
